<script type="text/javascript">
    //    $(function () {
    //        $("#autocomplete").geocomplete({
    //            details: ".geo-details",
    //            detailsAttribute: "data-geo"
    //        });
    //
    //    });

    var autocomplete;
    function init_autocomplete() {
        var input = (document.getElementById('q'));
        var options = {
            types: ['(regions)']
        };
//
        autocomplete = new google.maps.places.Autocomplete(input, options);
        autocomplete.addListener('place_changed', get_place);
        $(document).on({
            'DOMNodeInserted': function () {
                $('.pac-item, .pac-item span', this).addClass('needsclick');
            }
        }, '.pac-container');


    }

    function get_place() {
        var city = '';
        var country = '';
        var place = autocomplete.getPlace();
        var address_component = place['address_components'];
        for (var i = 0; i < address_component.length; i++) {
            type = address_component[i]['types'][0];
            console.log(address_component[i])
            switch (type) {
                case 'country':
                    country = address_component[i].long_name;
                    break;
                case 'administrative_area_level_2':
                    console.log(type);
                    city = address_component[i].long_name;
                    break;
            }
        }
        if (city.length > 0) {
            var query = city + ', ' + country;
        }
        else {
            query = country
        }

        $('#q').val(query);
//    $('#q').parents('form').submit();
    }

    function noSubmitOnReturn(e) {
        if (e.keyCode == 13) {
            return false;
        }
    }
</script>
